<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:fontFamily">@font/firasans</item>
        <item name="fontFamily">@font/firasans</item>

        <item name="android:windowAnimationStyle">@null</item>

        <item name="android:windowBackground">@color/backgroundDefault</item>
        <item name="android:actionMenuTextColor">@color/textAction</item>

        <item name="colorPrimary">@color/backgroundToolBar</item>
        <item name="colorPrimaryDark">@color/backgroundToolBar</item>
        <item name="colorAccent">@color/backgroundTheme</item>

        <item name="actionMenuTextAppearance">@style/AppMenuTextAppearance</item>

    </style>

    <style name="AppThemeNonAnimated" parent="AppTheme">

        <item name="android:windowAnimationStyle">@null</item>

    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:fontFamily">@font/firasans</item>
        <item name="fontFamily">@font/firasans</item>

        <item name="android:background">@color/backgroundDefault</item>
        <item name="android:textColorPrimary">@color/textTitle</item>

        <item name="colorAccent">@color/backgroundTheme</item>

    </style>

    <style name="AppMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">

        <item name="android:fontFamily">@font/firasans</item>
        <item name="fontFamily">@font/firasans</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="ThemeSwitch" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorForeground">@color/foregroundSwitch</item>
    </style>

    <style name="ThemeEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:colorForeground">@color/foregroundEditText</item>
    </style>

</resources>